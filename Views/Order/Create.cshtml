@model OnlineStore.Models.Order

<h1>Create</h1>

<h4>Order</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div>
                    <label asp-for="OrderDate" class="control-label"></label>
                    <label class="form-control">@DateTime.Now.ToLongDateString()</label>
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeliveryAddress" class="control-label"></label>
                    <input asp-for="DeliveryAddress" class="form-control" />
                    <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Total" class="control-label"></label>
                    &#8358<label id="checkoutTotalLabel" class="font-weight-bolder">0</label>
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="CustomerId" class="control-label"></label>
                    <input asp-for="CustomerId" class="form-control" />
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div id="cartItemsPlaceholder" hidden="hidden"></div>

                <div class="form-group">
                    <button type="submit" onclick="submitCheckoutForm" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    function submitCheckoutForm(e) {
        e.preventDefault();
    }
    </script>
}
