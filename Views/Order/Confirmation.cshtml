@model IEnumerable<OrderItem>



<table class="table">
    <thead>
        <tr>
            <th>
                Customer
            </th>
            <th>
                Item Name
            </th>
            <th>
                Order Date
            </th>

            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>Sub-Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderItem in Model)
        {
            <tr>
                <td>
                    VEGE00@(orderItem.Order.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelOrderItem => orderItem.Item.ItemName)
                </td>
                <td>
                    @(orderItem.Order.OrderDate.ToLongDateString())

                </td>
                <td>
                    @Html.DisplayFor(modelOrderItem => orderItem.Quantity)
                </td>
                <td>
                    &#8358 @Html.DisplayFor(modelOrderItem => orderItem.UnitPrice)
                </td>
                <td>
                    &#8358 @(orderItem.Quantity * orderItem.UnitPrice)

                </td>
            </tr>
        }
    </tbody>
</table>

<div class="checkout-right-basket">
    <a href="#" >
        Generate Invoice
        <span class="fa fa-file-invoice-dollar" aria-hidden="true"></span>
    </a>
</div>
<br />

@section Scripts
{
    <script>
        localStorage.setItem("cart", JSON.stringify([]));
    </script>
}
