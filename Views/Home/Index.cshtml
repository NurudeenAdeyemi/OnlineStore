@model IEnumerable<Item>
@{
    ViewData["Title"] = "Home Page";
}

@section style {
    <style>
    </style>

}

<!-- banner -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators-->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1" class=""></li>
        <li data-target="#myCarousel" data-slide-to="2" class=""></li>
        <li data-target="#myCarousel" data-slide-to="3" class=""></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="container">
                <div class="carousel-caption">
                    <h3>
                        Healthy
                        <span>Living</span>
                    </h3>
                    <p>
                        Get 
                        <span>Fresh</span> Vegetables and Fruits
                    </p>
                    <a class="button2" asp-action="Index" asp-controller="Home">Shop Now </a>
                </div>
            </div>
        </div>
        <div class="item item2">
            <div class="container">
                <div class="carousel-caption">
                    <h3>
                        Healthy
                        <span>Saving</span>
                    </h3>
                    <p>
                        Enjoy
                        <span>20%</span> Off
                    </p>
                    <a class="button2" asp-action="Index" asp-controller="Home">Shop Now </a>
                </div>
            </div>
        </div>
        <div class="item item3">
            <div class="container">
                <div class="carousel-caption">
                    <h3>
                        Big
                        <span>Deal</span>
                    </h3>
                    <p>
                        Get Best Fresh
                        <span> Organic Products</span>
                    </p>
                    <a class="button2" asp-action="Index" asp-controller="Home">Shop Now </a>
                </div>
            </div>
        </div>
        <div class="item item4">
            <div class="container">
                <div class="carousel-caption">
                    <h3>
                        Today
                        <span>Discount</span>
                    </h3>
                    <p>
                        Get Now
                        <span>20%</span> Discount
                    </p>
                    <a class="button2" asp-action="Index" asp-controller="Home">Shop Now </a>
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>
<div class="container-fluid text-center">
    <div class="row">
        <a asp-action="#" asp-controller="Home">
            <img src="~/images/special.webp" class="img-responsive img-rounded" style="width:100%" alt="Image">
        </a>

    </div>

</div>
<div class="container-fluid text-center mb-0">
    <div class="row">
        <div class="row text-center">
            <h3> <marquee class="text-success">Buy Fresh Fruits and Vegetables to Win a Promo  !!!<img src="~/images/promoshirt.png" width="88" height="31" alt=" " border="0"></marquee></h3>
        </div>
    </div>
</div>


<!-- //banner -->
<!-- top Products -->
<div class="ads-grid mt-0">
    <div class="container mt-0">
        <!-- tittle heading -->
        <h3 class="tittle-w3l">
            Our Top Products

            <span class="heading-style">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </h3>
        <!-- //tittle heading -->
        <!-- product left -->
        <div class="side-bar col-md-3">
            <div class="search-hotel">
                <h3 class="agileits-sear-head">Search Here..</h3>
                <form method="post" asp-action="Search" asp-controller="Home">
                    <input type="search" placeholder="Product name..." name="search" required="">
                    <input type="submit" value=" ">
                </form>

            </div>



            
            <!-- deals -->
            <div class="deal-leftmk left-side">
                <h3 class="agileits-sear-head">Special Promo Deals</h3>
                <div class="special-sec1">
                   
                        <a>

                            <img src="~/images/promoshirt.png" class="img-responsive zoom" style="width:100%" alt="Image">
                            <img src="~/images/promo2.png" class="img-responsive zoom" style="width:100%" alt="Image">
                            <marquee><h5 class="text-danger alert-danger">Win a Promo Shirt</h5></marquee>

                        </a>
                    
                    <div class="clearfix"></div>
                </div>
                
            </div>
            <!-- //deals -->
        </div>
        <!-- //product left -->
        <!-- product right -->
        <div class="agileinfo-ads-display col-md-9">
            <div class="wrapper">
                <!-- first section (nuts) -->
                <div class="product-sec1">
                    <h3 class="heading-tittle"></h3>


                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 product-men">
                            <div class="men-pro-item simpleCart_shelfItem">
                                <div class="men-thumb-item mb-0">
                                    <img src="~/images/@item.ItemPictureUrl" style="width:75%" alt="Image">
                                    
                                    <span class="product-new-top">-20%</span>
                                    <div class="item-info-product ">
                                        <h4>
                                            <p> @item.ItemName, per kg</p>
                                        </h4>
                                        <div class="info-product-price">
                                            <span class="item_price">&#8358 @item.Price</span>

                                        </div>
                                        


                                    </div>
                                    <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                       
                                       <input type="submit" onclick="addToCart(this)" name="submit" value="Add to cart" class="button" id="item-@item.ItemId" data-name="@item.ItemName" data-price="@item.Price" data-id="@item.ItemId"/>
                                      
                                    </div>
                                </div>

                            </div>
                        </div>
                    }






                    <div class="clearfix"></div>
                </div>
                <!-- //first section (nuts) -->
                <!-- second section (nuts special) -->
                <div class="product-sec1 product-sec2">
                    <div class="col-xs-7 effect-bg">
                        <h3 class="">Pure Energy</h3>
                        <h6>Enjoy our all healthy Products</h6>
                        <p>Get Extra 10% Off</p>
                    </div>
                    <h3 class="w3l-nut-middle">Nuts & Dry Fruits</h3>
                    <div class="col-xs-5 bg-right-nut">
                        <img src="/images/nut1.png" alt="">
                    </div>
                    <div class="clearfix"></div>
                </div>


                <!-- //fourth section (noodles) -->
            </div>
        </div>
        <!-- //product right -->
    </div>
</div>
<!-- //top products -->
<!-- Modal1 -->
<div class="modal " id="cart-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h5 class="text-dark">VEGEBASKET CART </h5>
                <h5 class="modal-title text-success" id="item-name"> </h5>
            </div>
            <div class="modal-body modal-body-sub_agile">
                <div class="row">
                    <div class="col-sm-4">
                        &#8358 <h5 id="item-price" class="text-dark font-weight-light"></h5>
                    </div>
                    <div class="col-sm-4">
                        <input id="quantity" class="form-control col-sm-12" min="1" type="number" placeholder="Quantity" />
                    </div>
                    <div class="col-sm-4">
                        &#8358 <h5 id="item-total" class="text-primary font-weight-light"></h5>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button href="#myModal" type="button" id="save" class="btn btn-success trigger-btn" data-toggle="modal">Add to Cart</button>

            </div>
        </div>
        <!-- //Modal content-->
    </div>
</div>

